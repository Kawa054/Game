function get_holditem_name(item_id){
	switch(item_id){
		case ITEM_ID_TORCH:
			return "たいまつ";
		break;
		
		case ITEM_ID_YARI1:
			return "とびどうぐ1";
		break;
		
		case ITEM_ID_PORTION1:
			return "ポーション";
		break;
		
		case ITEM_ID_YARI2:
			return "とびどうぐ2";
		break;
		
		case ITEM_ID_PORTION2:
			return "すごいポーション";
		break;
		
		case ITEM_ID_YARI3:
			return "とびどうぐ3";
		break;
		
		case ITEM_ID_PORTION3:
			return "にじいろのポーション";
		break;
	}
}