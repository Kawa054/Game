function get_holditem_sprite(item_id){
	switch(item_id){
		case ITEM_ID_TORCH:
			return icon_torch;
		break;
		
		case ITEM_ID_YARI1:
			return icon_item_yari1;
		break;
		
		case ITEM_ID_PORTION1:
			return icon_item_portion1;
		break;
		
		case ITEM_ID_YARI2:
			return icon_item_yari2;
		break;
		
		case ITEM_ID_PORTION2:
			return icon_item_portion2;
		break;
		
		case ITEM_ID_YARI3:
			return icon_item_yari3;
		break;
		
		case ITEM_ID_PORTION3:
			return icon_item_portion3;
		break;
	}
}